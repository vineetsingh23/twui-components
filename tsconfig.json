
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Set to true for `npm run typecheck` (tsc --noEmit).
    // `vite build` uses vite-plugin-dts which handles declaration emitting.
    "noEmit": true, 
    "jsx": "react-jsx",

    /* Declaration files for library (used by vite-plugin-dts) */
    "declaration": true,
    "declarationMap": true, 
    // `outDir` for declarations will be effectively handled by vite-plugin-dts within Vite's `build.outDir` (dist)
    // "outDir": "dist", // This can be kept for reference but vite-plugin-dts manages actual output location.

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["vite/client", "node"]
  },
  // "include" specifies files for `tsc --noEmit` (type checking)
  // and for `vite-plugin-dts` to find types.
  "include": ["src", "vite.config.ts", "main.tsx", "tailwind.config.js", "postcss.config.js"],
  "exclude": ["node_modules", "dist"],
  "references": [] 
}
